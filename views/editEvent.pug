extends ./layout
block content
    h1 Edit event 

    form(class="form-group",action="/event/editEvent", method="POST", enctype="multipart/form-data" )
        label Id of event
        input(class="form-control",name="id",type="text")
        label New name
        input(class="form-control",name="newName",type="text")
        label New image 
        input(class="form-control",name="newImage",type="file",accept="image/*")
        button(class="btn btn-primary") Save 
