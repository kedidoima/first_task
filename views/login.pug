extends ./layout
block content
    h1 Login
    if errors 
        each error in errors 
            .alert.alert-danger= error
    form(class="form-group", method="POST") 
        label(for="email") Email  
        input(class="form-control",type="text", name="email")
        label(for="password") Password
        input(class="form-control",type="password", name="password")
        button(class="btn btn-primary") Login 
    br 
    p Sign in with 
    a(href="/auth/facebook",class="btn btn-primary",role="button")
        i.fa.fa-facebook(aria-hidden='true')  Facebook
    a(href="/auth/google",class="btn btn-danger",role="button") 
        i.fa.fa-google-plus(aria-hidden='true')  Google